rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários autenticados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para endereços - apenas usuários autenticados
    match /enderecos/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para dados de gestão - apenas usuários autenticados
    match /gestao/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir leitura para estatísticas se autenticado
    match /stats/{document} {
      allow read: if request.auth != null;
    }
  }
}